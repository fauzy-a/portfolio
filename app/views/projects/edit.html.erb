<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-7">
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Portfolio", projects_path, class: "text-decoration-none" %></li>
          <li class="breadcrumb-item active"><%= link_to @project.title, project_path(@project), class: "text-decoration-none"%></li>
          <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
      </nav>

      <div class="card shadow-lg border-0 overflow-hidden">
        <div class="row g-0">
          <div class="col-12 bg-warning py-2 text-center text-dark fw-bold small uppercase" style="letter-spacing: 1px;">
             EDIT PROJECT
          </div>
          <div class="col-12 p-4 p-md-5 bg-white">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h2 class="fw-bold text-dark mb-0">Edit Project</h2>
              <div class="d-flex gap-2">
                <%= link_to @project, class: "btn btn-outline-secondary btn-sm rounded-pill px-3" do %>
                  <i class="fas fa-eye me-1"></i> Lihat
                <% end %>
              </div>
            </div>

            <hr class="mb-5 opacity-10">

            <%= render "form", project: @project %>
            
            <div class="text-center mt-4">
              <%= link_to "Batalkan Perubahan", projects_path, class: "text-muted small text-decoration-none" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>