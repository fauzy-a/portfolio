#!/usr/bin/env ruby
require "fileutils"

APP_ROOT = File.expand_path("..", __dir__)

def system!(*args)
  system(*args, exception: true)
end

FileUtils.chdir APP_ROOT do
  puts "== Installing dependencies =="
  # Mencoba bundle check dulu agar lebih cepat
  system("bundle check") || system!("bundle install")

  # Jika pakai yarn
  if File.exist?("package.json")
    puts "\n== Installing JavaScript dependencies =="
    system!("yarn install")
  end

  puts "\n== Ensuring asset directories =="
  # Membuat folder builds dan file .keep agar Propshaft tidak bingung
  FileUtils.mkdir_p "app/assets/builds"
  FileUtils.touch "app/assets/builds/.keep"

  puts "\n== Preparing database =="
  # Mempersiapkan database (create & migrate) sesuai schema.rb
  system! "bin/rails db:prepare"

  puts "\n== Removing old logs and tempfiles =="
  system! "bin/rails log:clear tmp:clear"

  puts "\n== Precompiling assets =="
  # Memaksa kompilasi aset agar file application.css langsung tersedia
  system! "bin/rails assets:clobber"
  system! "bin/rails assets:precompile"

  puts "\n== Setup Finished! =="
  puts "Semua siap! Sekarang jalankan './bin/dev' untuk memulai server."
end